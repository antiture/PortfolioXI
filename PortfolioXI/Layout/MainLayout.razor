@inherits LayoutComponentBase


<MudThemeProvider @bind-IsDarkMode="@_isDarkMode" Theme="_theme" />

<MudPopoverProvider />

<MudDialogProvider />

<MudSnackbarProvider />


<MudLayout>

    @if (_openBottom)
    {



        <MudDrawer @bind-Open="_openBottom"
                   Width="100vw"
                   Height="auto"
                   Anchor="Anchor.Bottom"
                   Variant="DrawerVariant.Temporary"
                   Elevation="2">
            <NavMenu></NavMenu>
            <MudSwitch @bind-Value="_isDarkMode" Color="Color.Primary" Class="ma-4" T="bool" Label="Light/Dark" />
            <MudDrawerHeader>
                <MudText Typo="Typo.h6">Portfolio - Zijian XI</MudText>
            </MudDrawerHeader>
        </MudDrawer>
    }

    <MudDrawer @bind-Open="@_open" 
               Variant="@DrawerVariant.Responsive">
        <MudDrawerHeader>
            <MudText Typo="Typo.h6">Portfolio - Zijian XI</MudText>
        </MudDrawerHeader>
        <NavMenu></NavMenu>
        <MudSwitch @bind-Value="_isDarkMode" Color="Color.Primary" Class="ma-4" T="bool" Label="Light/Dark" />

    </MudDrawer>


    <MudMainContent>
        <MudButton Variant="Variant.Text" OnClick="@(() => OpenDrawer())">Start</MudButton>
        <MudButton Variant="Variant.Text" OnClick="@(() => OpenDrawerBottom())">Bottom</MudButton>
        @Body
    </MudMainContent>
</MudLayout>



@code {
    private MudTheme _theme = new();
    private bool _isDarkMode = true;
    private bool _openBottom = false;
    private bool _open = true;
    private bool _overlayAutoClose = true;

    private void OpenDrawerBottom()
    {
        _openBottom = !_openBottom;

    }
    private void OpenDrawer()
    {
        _open = !_open;

    }
}



